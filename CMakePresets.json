{
    "version": 6,
    "configurePresets": [
        {
            "name": "cpp-std",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_EXTENSIONS": "OFF",
                "CMAKE_CXX_STANDARD": "23",
                "CMAKE_CXX_STANDARD_REQUIRED": "ON"
            }
        },
        {
            "name": "clang-tidy",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_CLANG_TIDY": "clang-tidy;"
            }
        },
        {
            "name": "debug",
            "hidden": true,
            "binaryDir": "build/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "enableMicrosoftCodeAnalysis": true,
                    "enableClangTidyCodeAnalysis": true
                }
            }
        },
        {
            "name": "release",
            "hidden": true,
            "binaryDir": "build/release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CONFIGURATION_TYPES": "Release"
            }
        },
        {
            "name": "flags-common",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "-Wall -Wformat -Wformat=2 -Wconversion -Wimplicit-fallthrough -U_FORTIFY_SOURCE -D_FORTIFY_SOURCE=3 -D_GLIBCXX_ASSERTIONS -fstrict-flex-arrays=3 -fstack-clash-protection -fstack-protector-strong -Wl,-z,nodlopen -Wl,-z,noexecstack -Wl,-z,relro -Wl,-z,now -Wl,--as-needed -Wl,--no-copy-dt-needed-entries"
            }
        },
        {
            "name": "flags-gcc",
            "hidden": true,
            "inherits": ["flags-common"],
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "-Wtrampolines -Wbidi-chars=any -Werror=implicit -Werror=incompatible-pointer-types -Werror=int-conversion -fexceptions"
            }
        },
        {
            "name": "flags-msvc",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "/sdl /guard:cf /utf-8 /diagnostics:caret /w14165 /w44242 /w44254 /w44263 /w34265 /w34287 /w44296 /w44365 /w44388 /w44464 /w14545 /w14546 /w14547 /w14549 /w14555 /w34619 /w34640 /w24826 /w14905 /w14906 /w14928 /w45038 /wd4201 /W4 /permissive- /volatile:iso /Zc:inline /Zc:preprocessor /Zc:enumTypes /Zc:lambda /Zc:__cplusplus /Zc:externConstexpr /Zc:throwingNew /EHsc /RTCsu",
                "CMAKE_EXE_LINKER_FLAGS": "/machine:x64 /guard:cf /PROFILE"
            }
        },
        {
            "name": "win64-debug",
            "inherits": ["debug", "cpp-std", "clang-tidy", "flags-msvc"],
            "architecture": "x64"
        },
        {
            "name": "win64-release",
            "inherits": ["release", "cpp-std"],
            "architecture": "x64"
        }
    ],
    "buildPresets": [
        {
            "name": "lib-debug",
            "displayName": "Lib Debug Build",
            "configurePreset": "debug",
            "configuration": "Debug"
        },
        {
            "name": "lib-release",
            "displayName": "Lib Release Build",
            "configurePreset": "release",
            "configuration": "Release"
        }
    ]
}